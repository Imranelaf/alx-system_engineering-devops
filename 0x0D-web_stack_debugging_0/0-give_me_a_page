#!/usr/bin/env bash
# Fix the bug in Apache 2
sed -i '/Listen 80/a Listen 0.0.0.0:8080' /etc/apache2/ports.conf
sed -i '/<\/VirtualHost>/i <VirtualHost *:8080>\nServerAdmin webmaster@localhost\nDocumentRoot /var/www/html\n</VirtualHost>' /etc/apache2/sites-available/000-default.conf
service apache2 restart
